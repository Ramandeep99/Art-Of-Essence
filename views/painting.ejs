</nav>

    <div class="post" data-aos="zoom-in-left">
        <div class="painting lt block2">
            <img src= "<%= '../'+painting.painting %>" class="art">
            <p id="p-name"><%= painting.title %></p>
            <div class="price">
                <del>
                  <span class="amount">₹6,500</span>
                </del>
                <ins>
                  <span class="amount">₹<%= painting.basePrice %></span>
                </ins>
            </div>
        
            <div class="like-comm-section">
                <div class="lc-section">
                    <span><i class="fas fa-heart"></i></span>
                </div>
                <div class="lc-section">
                    <span><i class="far fa-comment"></i></span>
                </div>
            </div>
        </div>
        
        <div class="blog rt block2">
            <p class="blog-para"> 
                <%= painting.description %>
            </p>
            <% if(painting.bidded == true && painting.sold == true){ %>
            <div class="sell-section">
                <a href="/painting1/<%= painting.id %>" class="btn btn-lg btn-primary">SOLD</a>
                <!-- <button class="btn btn-primary btn-lg" onclick=myFunc()>Wanna Buy?</button> -->
            </div>
            <% } else if(painting.bidded == true) { %>
                
                <div class="sell-section">
                    <a href="/painting1/<%= painting.id %>" class="btn btn-lg btn-primary">Unsold, Auction Completed!</a>
                    <!-- <button class="btn btn-primary btn-lg" onclick=myFunc()>Wanna Buy?</button> -->
                </div>
            <% } else { %>
                <div class="sell-section">
                    <a href="/painting1/<%= painting.id %>" class="btn btn-lg btn-primary">Time</a>
                    <!-- <button class="btn btn-primary btn-lg" onclick=myFunc()>Wanna Buy?</button> -->
                </div>
            <% } %>
        </div>
    </div>

