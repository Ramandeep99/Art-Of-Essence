                <div class="layer"></div>
                <div class="layer"></div>
              </div>
        </div>
        <div id="menu" class="menu">
            <div class="links">
                <ul>
                    <li><a href="/gallery" class="btn-4"><span>Gallery</span></a></li>
                    <li><a href="/feed" class="btn-4"><span>Feed</span></a></li>
                    <li><a href="/artists" class="btn-4"><span>Artists</span></a></li>
                    <li><a href="/auction" class="btn-4"><span>Auction</span></a></li>
                </ul>
            </div>
            <div id="profileName"> 
                <!-- <button onclick="href='./login'">LogIn/SignUp</button> -->
